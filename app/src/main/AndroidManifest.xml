<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joshbgold.PirateSpanishFree">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme2" >
        <activity
            android:name="com.joshbgold.PirateSpanishFree.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.joshbgold.PirateSpanishFree.quizActivity"
            android:label="Pirate Spanish"

            android:parentActivityName="com.joshbgold.PirateSpanishFree.questsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshbgold.PirateSpanishFree.quizActivity"
                android:windowSoftInputMode="stateHidden"/>
        </activity>

        <activity
            android:name="com.joshbgold.PirateSpanishFree.SettingsActivity"
            android:label="Pirate Spanish"
            android:parentActivityName="com.joshbgold.PirateSpanishFree.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshbgold.PirateSpanishFree.SettingsActivity" />
        </activity>

        <activity
            android:name="com.joshbgold.PirateSpanishFree.WordPracticeActivity"
            android:label="Pirate Spanish"
            android:parentActivityName="com.joshbgold.PirateSpanishFree.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshbgold.PirateSpanishFree.WordPracticeActivity" />
        </activity>

        <activity
            android:name="com.joshbgold.PirateSpanishFree.CaptainActivity"
            android:label="Pirate Spanish"
            android:parentActivityName="com.joshbgold.PirateSpanishFree.quizActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshbgold.PirateSpanishFree.CaptainActivity" />
        </activity>

        <activity
            android:name="com.joshbgold.PirateSpanishFree.FAQActivity"
            android:label="Pirate Spanish"
            android:parentActivityName="com.joshbgold.PirateSpanishFree.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshbgold.PirateSpanishFree.FAQActivity" />
        </activity>

        <activity
            android:name="com.joshbgold.PirateSpanishFree.questsActivity"
            android:label="Pirate Spanish"
            android:parentActivityName="com.joshbgold.PirateSpanishFree.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshbgold.PirateSpanishFree.questsActivity" />
        </activity>

    </application>

</manifest>
